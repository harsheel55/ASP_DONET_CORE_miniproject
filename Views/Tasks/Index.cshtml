@model IEnumerable<TaskManager.Models.TaskItem>

@{
    ViewData["Title"] = "Task List";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Is Complete</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Title</td>
                <td>@task.Description</td>
                <td>@task.IsComplete</td>
                <td>
                    <a href="@Url.Action("Details", "Tasks", new { id = task.Id })" class="btn btn-info">Details</a>
                    <a href="@Url.Action("Edit", "Tasks", new { id = task.Id })" class="btn btn-warning">Edit</a>
                    <form action="@Url.Action("Delete", "Tasks", new { id = task.Id })" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this task?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Create New</a>
